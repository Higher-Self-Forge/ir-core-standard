{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ir-standard.org/schemas/v1.0/ir-conformant-plus-assertions.schema.json",
  "$comment": "Informative / Non-Normative: Additional machine-checkable assertions for IR-Conformant+.",
  "title": "IR-Conformant+ Assertions (Informative / Non-Normative)",
  "allOf": [
    {
      "$ref": "https://ir-standard.org/schemas/v1.0/audit-entry.schema.json"
    },
    {
      "if": {
        "properties": {
          "event_type": {
            "enum": [
              "SECURITY_ALERT",
              "KILL_SWITCH_ACTIVATION"
            ]
          }
        },
        "required": [
          "event_type"
        ]
      },
      "then": {
        "required": [
          "signatures"
        ],
        "properties": {
          "signatures": {
            "type": "array",
            "minItems": 1
          }
        }
      }
    }
  ]
}
